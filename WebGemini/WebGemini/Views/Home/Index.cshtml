@{
    ViewData["Title"] = "Chat con Gemini y ChatGPT";
    var selectedMode = ViewBag.SelectedMode as string ?? "gemini";
}

<div class="container py-5" style="max-width: 600px;">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-body p-5">
            <h2 class="card-title text-center mb-4 fw-bold" style="color: #2c3e50;">Chatbot Gemini & GPT</h2>

            <form method="post" asp-controller="Home" asp-action="Index" autocomplete="off">
                <div class="form-floating mb-4">
                    <textarea class="form-control"
                              id="userPrompt"
                              name="userPrompt"
                              style="height: 120px; resize: none;">@ViewBag.UserPrompt</textarea>
                    <label for="userPrompt" class="text-muted">Escribe tu mensaje aquí...</label>
                </div>

                <div class="mb-4">
                    <select class="form-select" name="mode">
                        @if (selectedMode == "gemini")
                        {
                            <option value="gemini" selected>Gemini</option>
                            <option value="gpt">GPT</option>
                        }
                        else if (selectedMode == "gpt")
                        {
                            <option value="gemini">Gemini</option>
                            <option value="gpt" selected>GPT</option>
                        }
                        else
                        {
                            <option value="gemini" selected>Gemini</option>
                            <option value="gpt">GPT</option>
                        }
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-gradient btn-lg fw-semibold shadow-sm" style="background: linear-gradient(90deg, #5a86ff, #4bc1ff); border: none; color: white; border-radius: 50px; transition: background 0.3s ease;">
                        Enviar
                    </button>
                </div>
            </form>

            @if (ViewBag.BotResponse != null)
            {
                <div class="mt-5 p-4 bg-light rounded-4 shadow-sm border border-primary" style="color: #34495e;">
                    <h5 class="mb-3 fw-semibold"><i class="bi bi-robot"></i> Respuesta (@selectedMode):</h5>
                    <p class="fs-5">@ViewBag.BotResponse</p>
                </div>
            }
        </div>
    </div>
</div>
